{
  "name": "barefoot-nomad",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "nyc": {
    "require": [
      "@babel/register",
      "@babel/polyfill"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "**/**/**/swaggerDefinition.js",
      "**/**/**/index.js",
      "**/**/**/sendResult.js",
      "**/**/**/validator.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "start": "babel-node ./src/index.js",
    "dev": "nodemon --exec babel-node ./src/index",
    "test": "npm run db-migrate:test && npm run db-seeder:test &&  NODE_ENV=test nyc --reporter=html --reporter=text --reporter=lcov ./node_modules/.bin/mocha  ./src/tests/* --require @babel/register --timeout 50000 --exit",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "db-migrate": "sequelize db:migrate --env production",
    "db-migrate:dev": "sequelize db:migrate --env development",
    "db-seeder:dev": "sequelize db:seed:all --env development",
    "db-seeder:test": "sequelize db:seed:all --env test",
    "db-delete:dev": "sequelize db:migrate:undo:all --env development",
    "db-migrate:test": "sequelize db:migrate:undo:all --env test && sequelize db:migrate --env test",
    "lint": "eslint ./src/**/*.js",
    "dockerDev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "dockerProd": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/node": "^7.6.2",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.2",
    "@babel/register": "^7.6.2",
    "@sendgrid/mail": "^6.4.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cloudinary": "^1.15.0",
    "coveralls": "^3.0.6",
    "dotenv": "^8.1.0",
    "express": "^4.16.3",
    "express-fileupload": "^1.1.6-alpha.5",
    "express-session": "^1.16.2",
    "jsonwebtoken": "^8.3.0",
    "method-override": "^3.0.0",
    "mocha": "^6.2.1",
    "morgan": "^1.9.1",
    "nock": "^11.4.0",
    "nodemailer": "^6.3.1",
    "nyc": "^14.1.1",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-facebook-token": "^3.3.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-google-plus-token": "^2.1.0",
    "path": "^0.12.7",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "request": "^2.87.0",
    "sequelize": "^5.19.1",
    "sequelize-cli": "^5.5.1",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "sinon-express-mock": "^2.2.1",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.1.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^5.2.0",
    "eslint": "^6.5.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.7",
    "nodemon": "^1.19.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  }
}
